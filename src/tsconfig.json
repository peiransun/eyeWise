{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "../dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "noImplicitReturns": true,   
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": true,
        "allowUnusedLabels": true,
        "diagnostics": false
    },
    "exclude": [
        "node_modules"
    ]
}